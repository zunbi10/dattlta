    <TextView
        android:id="@+id/textView1"
        android:layout_width="332dp"
        android:layout_height="62dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/teal_700"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.195" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginTop="253dp"
        android:layout_marginBottom="27dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.815">

        <RadioButton
            android:id="@+id/button_AI_q1_a1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15sp"

            android:text="Để chuyển đổi một chương trình viết trên nền C sang C++, ta chỉ cần đổi phần mở rộng file từ .c sang .cpp"
            android:textColor="#F44336"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/button_AI_q1_a2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15sp"
            android:text="Chương trình viết trên nền C++ cũng tương đương với chương trình viết trên nền C"
            android:textColor="#36F449"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/button_AI_q1_a3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngôn ngữ lập trình C là ngôn ngữ kế thừa của ngôn ngữ lập trình C++ và được mở rộng thêm tính hướng đối tượng"
            android:textColor="#FFEB3B"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/button_AI_q1_a4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15sp"
            android:text="Trình biên dịch C và trình biên dịch C++ thông thường là các chương trình khác biệt nhau"
            android:textColor="#F44336"
            android:textSize="20sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:text="Trong các phát biểu dưới đây, đâu là phát biểu đúng về Ngôn ngữ lập trình C và C++?"
        android:textColor="#4CAF50"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.169" />

